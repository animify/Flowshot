{
    "manifest_version": 2,
    "name": "Flowshot",
    "description": "Flowshot.",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/eventPage.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/contentScript.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "js/clientScript.js"
    ],
    "permissions": [
        "<all_urls>",
        "tabCapture",
        "tabs"
    ]
}